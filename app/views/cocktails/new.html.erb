<% content_for(:title) { "New cocktail" } %>
 <% content_for(:description) do %>
 Add your new cocktail now!>
 <% end %>

<h1> Enter data for new cocktail </h1>

<%= simple_form_for @cocktail do |f| %>
  <% if @cocktail.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @cocktail.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :name %>
  <%= f.submit "Add a cocktail", class: "btn btn-primary" %>
<% end %>
